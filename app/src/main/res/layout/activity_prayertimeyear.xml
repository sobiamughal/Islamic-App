                android:gravity="center"
                android:id="@+id/cal3"
                android:layout_below="@+id/cal2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/jancal" />
            <ImageView
                android:gravity="center"
                android:id="@+id/cal4"
                android:layout_below="@+id/cal3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/jancal" />
            <ImageView
                android:gravity="center"
                android:id="@+id/cal5"
                android:layout_below="@+id/cal4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/jancal" />
            <ImageView
                android:gravity="center"
                android:id="@+id/cal6"
                android:layout_below="@+id/cal5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/jancal" />
            <ImageView
                android:gravity="center"
                android:id="@+id/cal7"
                android:layout_below="@+id/cal6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/jancal" />
            <ImageView
                android:gravity="center"
                android:id="@+id/cal8"
                android:layout_below="@+id/cal7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/jancal" />
